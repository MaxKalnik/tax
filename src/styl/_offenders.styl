.offenders
  width: 720px
  margin: 32px auto 0 auto

  +respond-to($small)
    width: 540px

  +respond-to($xsmall)
    width: 100%

.offenders__table-mob-hidden
  +respond-to($xsmall)
    display: none

.offenders__complaints-icon
  display: inline-block
  min-width: 16px
  height: 16px
  background: url(images/svg/icon_complaints_white.svg) center no-repeat
  margin-right: 12px

  +respond-to($xsmall)
    display: none

.offenders__table-logo-wrapper
  display: inline-block
  width: 118px

  +respond-to($xsmall)
    display: none

.offenders__table-text
  text-align: left

  +respond-to($xsmall)
    text-align: center

.offenders__table-text-d
  display: inline-block
  margin-left: 35px

  +respond-to($small)
    margin-left: 10px

  +respond-to($xsmall)
    margin-left: 0

.offenders__table
  width: 100%
  border-collapse: collapse
  border-radius: 5px
  border: 1px solid #fcd2cf
  border-top: none
  box-sizing: border-box
  background-image: linear-gradient(-90deg, #FB877C 0%, #F4625A 100%)
  thead
    th
      height: 52px
      font-size: 10px
      line-height: 16px
      font-weight: bold
      color: #ffffff
      text-transform: uppercase
      text-align: center
      padding: 0 12px
      box-sizing: border-box
      border-right: 1px solid rgba(255, 255, 255, 0.3)
      &:nth-child(2)
        text-align: left

      &:nth-child(3)
        display: flex
        justify-content: flex-start
        align-items: center

      &:last-child
        border-right: none

  tbody
    td
      height: 64px
      font-size: 12px
      line-height: 16px
      font-weight: 600
      color: #0a0c0d
      padding: 0 12px
      box-sizing: border-box
      text-align: center
      &:nth-child(2)
        width: 55%
        text-align: left

    tr
      background: #ffffff
      border-bottom: 1px solid #fcd2cf
      &:last-child
        border-bottom: none

  +respond-to($small)
    tbody
      td
        &:first-child
          width: 8%

        &:nth-child(3)
          width: 26%

  +respond-to($xsmall)
    tbody
      td
        &:first-child
          width: 5%

        &:nth-child(2)
          width: 55%

        &:nth-child(3)
          width: 46%

  +respond-to(567px)
    tbody
      td
        &:first-child
          width: 5%

        &:nth-child(2)
          width: 15%

        &:nth-child(3)
          width: 46%
