@import "virtual/_variable.styl"

.tables-container
  margin-bottom: 24px

.ranking-table
  width: 100%
  border-collapse: collapse
  border-radius: 5px
  border: 1px solid #ddeef2
  border-top: none
  box-sizing: border-box
  background-image: linear-gradient(-90deg, #10BAF4 0%, #078BE9 98%)
  thead
    th
      height: 46px
      font-size: 10px
      line-height: 16px
      font-weight: bold
      color: #ffffff
      text-transform: uppercase
      text-align: center
      padding: 0 12px
      box-sizing: border-box
      border-right: 1px solid rgba(255, 255, 255, 0.3)
      &:last-child
        border-right: none

      +respond-to($xsmall)
        br
          display: none

  tbody
    td
      width: 14.2%
      height: 51px
      font-size: 12px
      line-height: 16px
      font-weight: 600
      color: #0A0C0D
      padding: 0 12px
      box-sizing: border-box
      text-align: center

    tr
      background: #ffffff
      border-bottom: 1px solid #ddeef2
      &:nth-child(odd)
        background: #f7fdfe
      &:last-child
        border-bottom: none
        .rate-block
          background: transparent

.ranking-table.ranking-table--fixed
  background-image: linear-gradient(-90deg, #078BE9 0%, #078BE9 98%)

.btn-container
  display: flex
  justify-content: center
  margin-top: 24px

.btn-go-back
  display: inline-block
  color: #24A0EE
  border-radius: 5px
  padding: 12px 24px
  font-size: 12px
  line-height: 26px
  font-weight: 600
  text-transform: uppercase
  cursor: pointer
  transition: .25s
  border: 1px solid rgba(29, 125, 224,.2)
  &:hover
    background: #24A0EE
    color: #ffffff
    border-color: #ffffff

.mobile-only
  display: none

+respond-to($small)
  .section--table
    .breadcrumbs__wrap
      white-space: nowrap
      max-width: 100%
      box-sizing border-box

  .ranking-table
    thead
      th
        height: 56px
        padding: 0 8px

    tbody
      td
        padding: 0 8px

+respond-to($xsmall)
  .section--table
    margin-bottom: 30px
    .breadcrumbs__wrap
      margin-bottom: 30px

    .btn-container
      margin-top: 24px

  .tables-container
    display: flex
    flex-direction: row

  .mobile-only
    width: 180px
    display: flex
    flex-direction: column

  .ranking-table
    thead
      th
        height: 56px
        padding: 0 8px

    tbody
      td
        padding: 0 8px

  .ranking-table.ranking-table--data
    min-width: 490px

  .ranking-table.ranking-table--fixed
    width: 180px
    position: relative
    border-radius: 5px 0 0 0
    border-right: none
    box-shadow: 2px 0 13px 0 rgba(0,0,0,0.16)

    th
      vertical-align: middle

    th:last-child
      position: relative
      &:after
        content: ''
        position: absolute
        width: 1px
        height: 60px
        background: rgba(255, 255, 255, 0.3)
        right: 0
        top: 0

    td
      &:first-child
        width: 2%

  .ranking-table__wrapper
    width: calc(100% - 180px)
    overflow-x: scroll
    padding-left: 0
    padding-right: 0

  .ranking-table--data
    border-radius: 0 5px 5px 5px
    border-left: none
    thead
      th
        &:first-child,
        &:nth-child(2)
          display: none

    tbody
      td
        &:first-child,
        &:nth-child(2)
          display: none

